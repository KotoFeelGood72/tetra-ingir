									icon: 'map'
								},
								{
									link: ['+7 918 442-45-19', '+7 928 282-64-55'],
									icon: 'tel'
								},
								{
									link: ['alex_1510@inbox.ru', 'tetra.inginiring@gmail.com'],
									icon: 'mail'
								},
							]
						each item in info 
							li.contact_item 
