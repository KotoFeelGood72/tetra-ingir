// Btn
mixin btn(data)
	.btn(class=data.class data-target=data.target)
		if data.link
			a(href="#")=data.name
		else 
			button(type=data.type ? data.type : type="button")=data.name

// End

// Input
mixin input(data)
	.global_input(class=`${data.var}_input`)
		if data.submit
			input(type="submit" value=data.val id=`${data.var}_submit`)
		else 
			input(type=data.type ? data.type : type="text" placeholder=data.place id=`${data.var}_${data.type}`)

// End

// Block contacts
